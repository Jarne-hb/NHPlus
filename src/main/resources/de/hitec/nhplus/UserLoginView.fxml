<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="855.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.hitec.nhplus.presenter.LoginPresenter"
            stylesheets="@Application.css">
   <children>
      <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <VBox alignment="CENTER" spacing="20.0">
            <children>
               <Label text="Login">
                  <font>
                     <Font name="System Bold" size="24.0" />
                  </font>
               </Label>

               <GridPane hgap="10" vgap="10" alignment="CENTER">
                  <children>
                     <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <font>
                           <Font name="System Bold" size="14.0"/>
                        </font>
                     </Label>
                     <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                     <Label text="Passwort" GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <font>
                           <Font name="System Bold" size="14.0"/>
                        </font>
                     </Label>
                     <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                  </children>
               </GridPane>

               <Button text="Login" onAction="#handleLogin"/>
            </children>
            <padding>
               <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
            </padding>
         </VBox>
      </StackPane>
   </children>
</AnchorPane>
